<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.SignUpActivity">

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.mountaintravelandplanner.login.CustomView
        android:id="@+id/edit_email_signup"
        android:layout_width="327dp"
        android:layout_height="55dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/edit_text"
        android:hint=" enter your email"
        app:layout_constraintEnd_toEndOf="@+id/sign_in"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/sign_in"
        app:layout_constraintTop_toBottomOf="@+id/sign_in" />

    <com.example.mountaintravelandplanner.login.CustomView
        android:id="@+id/edit_pass_signup"
        android:layout_width="327dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_text"
        android:hint=" enter your password"
        app:layout_constraintEnd_toEndOf="@+id/edit_email_signup"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_email_signup"
        app:layout_constraintTop_toBottomOf="@+id/edit_email_signup" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppins_light"

        android:text="Already Have Account?"
        app:layout_constraintEnd_toEndOf="@+id/button_signup"
        app:layout_constraintStart_toStartOf="@+id/button_signup"
        app:layout_constraintTop_toBottomOf="@+id/button_signup" />

    <TextView
        android:id="@+id/to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Sign In"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button_signup"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Sign Up"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/edit_pass_signup"
        app:layout_constraintStart_toStartOf="@+id/edit_pass_signup"
        app:layout_constraintTop_toBottomOf="@+id/edit_pass_signup" />

</androidx.constraintlayout.widget.ConstraintLayout>